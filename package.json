{
  "name": "model-selector",
  "version": "0.1.0",
  "description": "An open source assistant to help you choose, adapt, and deploy the best AI model for your task",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "dev:vanilla": "vite --config vite.config.vanilla.js",
    "build:vanilla": "vite build --config vite.config.vanilla.js",
    "preview:vanilla": "vite preview --config vite.config.vanilla.js",
    "test": "vitest",
    "test:llm": "RUN_LLM_TESTS=true vitest --run tests/llm-classification.test.js tests/ensemble-validation.test.js",
    "test:spikes": "vitest --run tests/spike-validation.test.js",
    "update-models": "node src/lib/aggregation/cli.js",
    "update-models:dry-run": "node src/lib/aggregation/cli.js --dry-run",
    "spike:all": "node src/lib/validation/run-spikes.js all",
    "spike:benchmark": "node src/lib/validation/run-spikes.js benchmark",
    "spike:threshold": "node src/lib/validation/run-spikes.js threshold",
    "spike:coverage": "node src/lib/validation/run-spikes.js coverage",
    "spike:performance": "node src/lib/validation/run-spikes.js performance"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.7.5"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "svelte": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "ai",
    "ml",
    "model-selection",
    "pwa",
    "offline",
    "svelte"
  ],
  "author": "Model Selector Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/model-selector.git"
  }
}
